#segunda versao do codigo para fazer a nave andar feita pela gpt
func get_input_direction():
	var dir = Vector2()
	if Input.is_action_pressed("ui_left"):
		dir.x -= 1
	if Input.is_action_pressed("ui_right"):
		dir.x += 1
	return dir

func _process(delta):
	var input_dir = get_input_direction()
	position.x += input_dir.x * velocidade * delta

	var dir = Vector2()
	if Input.is_action_pressed("ui_left"):
		dir.x -= 1
	if Input.is_action_pressed("ui_right"):
		dir.x += 1
	return dir
